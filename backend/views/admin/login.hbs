<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container">
  <div class="row"> </div>

  <form action="/admin/login" method="post">

    <div class="form-group">
      <label for="input" class="col-sm-2 col-form-label">Usuario</label>
      <input type="text" class="form-control" id="inputUsuario" placeholder="usuario" name="usuario">
    </div>

    <div class="form-group">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
      <input type="password" class="form-control" id="inputClave" placeholder="clave" name="clave">
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>
  </form>

  {{#if error}}
  <p>Usuario o clave Incorrecto</p>
  {{/if}}

</div>