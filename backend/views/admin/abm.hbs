<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<div class="container-title">
  <div class="row">
    <div class="col">
      <p>Hola Bienvenido {{ usuario }} ! </p>
      <a href="/admin/login/logout" class="btn">Log Out</a>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
     <h3>Listado de Materias</h3> 
    </div>
    <div class="col-2">
      <button type="button" class="btn btn-outline-success">Nuevo</button>
    </div>
  </div>
</div>
<div class="container-table">
<div class="row align-items-start">
  <div class="col">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">nombre_materia</th>
          <th scope="col">descripcion_materia</th>
        </tr>
      </thead>
      <tbody>
        {{#each abm}}
        <tr>
          <th scope="row">{{materias.id}}</th>
          <td>{{materias.nombre_materia}}</td>
          <td>{{materias.descripcion_materia}}</td>
          <td class="text-center"></td>
        </tr>
      {{/each}}
      </tbody>
    </table>
  </div>
</div>
</div>
</div>
